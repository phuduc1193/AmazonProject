@model RegisterViewModel

@{
    ViewData["Title"] = "Registration";
}

<div class="login-page">
    <div class="page-header">
        <h3>Register</h3>
    </div>@Html.Partial("_ValidationSummary")
    @if (Model.EnableLocalLogin)
    {
        <div class="card">
            <div class="card-header">
                Information
            </div>
            <div class="card-body">
                <form asp-route="Register">
                    <input type="hidden" asp-for="ReturnUrl">
                    <fieldset>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label asp-for="FirstName"></label>
                                <input class="form-control" placeholder="First Name" asp-for="FirstName"
                                       autofocus>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="LastName"></label>
                                <input class="form-control" placeholder="Last Name" asp-for="LastName">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label asp-for="Username"></label>
                                <input class="form-control" placeholder="Username" asp-for="Username">
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="Email"></label>
                                <input class="form-control" placeholder="Email Address" asp-for="Email">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label asp-for="Password"></label>
                                <input type="password" class="form-control" placeholder="Password" asp-for="Password"
                                        autocomplete="off">
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="ConfirmPassword"></label>
                                <input type="password" class="form-control" placeholder="Password Confirmation" asp-for="ConfirmPassword" autocomplete="off">
                            </div>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success" name="button" value="register">Register</button>
                            <button class="btn btn-secondary" name="button" value="cancel">Cancel</button>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <strong>Invalid register request</strong>
            There are no local login scheme
            configured for this client.
        </div>
    }
</div>