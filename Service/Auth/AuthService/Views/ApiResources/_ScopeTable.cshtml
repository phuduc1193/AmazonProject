@model List<NewApiResourceScopeViewModel>

<div class="card mb-3">
    <div class="card-header align-content-center d-flex justify-content-between">
        <b class="align-self-center">Api Scopes</b>
        <button class="btn btn-info" id="addScopeBtn" name="button" value="scope">Add scope</button>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-sm">
            <thead class="text-black-50">
                <tr>
                    <th>
                        Name <small class="px-1"><i class="fas fa-info-circle" title="Unique across all API resources"></i></small>
                    </th>
                    <th>Display Name</th>
                    <th>Description</th>
                    <th>Required</th>
                    <th>Emphasize</th>
                </tr>
            </thead>
            <tbody id="content">
                @if (Model.Count > 0)
                {
                    @foreach (var scope in Model)
                    {
                        <tr>
                            <td>@scope.ScopeName</td>
                            <td>@scope.ScopeDisplayName</td>
                            <td>@scope.ScopeDescription</td>
                            <td class="table-input">
                                <input type="checkbox" disabled checked="@scope.ScopeRequired">
                            </td>
                            <td class="table-input">
                                <input type="checkbox" disabled checked="@scope.ScopeEmphasize">
                            </td>
                        </tr>
                    }
                }
                @Html.Partial("_ScopeRow", new NewApiResourceScopeViewModel { ScopeRequired = true, ScopeEmphasize = true })
            </tbody>
        </table>
    </div>
</div>